<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/round_corner_layout"
    android:layout_marginVertical="15dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginHorizontal="10dp"
        android:id="@+id/ticketImg"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/cnmc1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTicketName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Con nhót mót chồng" />

        <TextView
            android:id="@+id/txtTicketCinema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng chiếu: " />

        <TextView
            android:id="@+id/txtTicketDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày xem:" />

        <TextView
            android:id="@+id/txtTicketTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian:" />

        <TextView
            android:id="@+id/txtTicketType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại vé: " />

        <TextView
            android:id="@+id/txtTicketBuyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên người đặt vé: " />

        <Button
            android:layout_marginVertical="5dp"
            android:id="@+id/btnCancelTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#00dd00"
            android:text="Hủy vé" />
    </LinearLayout>
</LinearLayout>