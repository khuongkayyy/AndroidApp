<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201D28"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/movie2Img"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:paddingVertical="10dp"
        android:textStyle="bold"
        android:text="CREATE NEW ACCOUNT" />

    <EditText
        android:id="@+id/edtNewUserMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mobile"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        android:textColor="#FFFFFF"
        />

    <EditText
        android:id="@+id/edtNewUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Name" />

    <EditText
        android:id="@+id/edtNewUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        android:textColor="#FFFFFF"
        android:hint="Email" />

    <EditText
        android:id="@+id/edtNewUserPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:textColor="#FFFFFF"
        android:password="true"
        android:hint="Password"
        tools:ignore="Deprecated" />

    <EditText
        android:id="@+id/edtNewUserPassCon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:password="true"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        tools:ignore="Deprecated" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:backgroundTint="#DFA709"
        android:textColor="#FFFFFF"
        android:layout_marginHorizontal="60dp"
        android:text="CREATE" />

    <Button
        android:layout_marginTop="80dp"
        android:id="@+id/btnLoginDirect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#201D28"
        style="@style/ButtonNoBorder"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Login" />
</LinearLayout>