<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:background="@drawable/round_corner_layout"
    android:layout_marginHorizontal="10dp"
    android:backgroundTint="#125C4C"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/watchedMovieImg"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginVertical="10dp"
        app:srcCompat="@drawable/daugau1" />

    <TextView
        android:id="@+id/txtWatchedFilmName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Film Name"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginVertical="10dp"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/txtWatchedFilmDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Watch Date"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="#00dd00"
        android:id="@+id/btnComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhận xét" />
</LinearLayout>