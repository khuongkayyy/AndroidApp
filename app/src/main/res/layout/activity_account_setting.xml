<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnConfirm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/account_background"
    android:orientation="vertical"
    tools:context=".AccountSetting"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAccount_Home"
            style="@style/ButtonNoBorder"
            android:layout_width="47dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/account_home" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thông tin tài khoản"
            android:textColor="#07292F"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtAccountName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Xin chào, Nguyễn Đạt Khương"
        android:textAlignment="center"
        android:textColor="#07292F"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Tên Tài Khoản"
        android:textColor="#07292F"
        android:textSize="20dp"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:id="@+id/accountNameEdt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Tên tài khoản"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/textView33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Mật Khẩu"
        android:textColor="#C9E990"
        android:textSize="20dp"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:id="@+id/accountPasswordEdt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:textColor="#C9E990"
        android:textColorHint="#C9E990"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/textView34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác Nhận Mật Khẩu"
        android:textColor="#C9E990"
        android:textSize="20dp"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:password="true"
        android:id="@+id/accountPasswordConfirmedEdt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Xác nhận mật khẩu"
        android:inputType="textPersonName"
        android:textColor="#C9E990"
        android:textColorHint="#C9E990"
        android:layout_marginHorizontal="10dp"/>

    <Button
        android:height="60dp"
        android:id="@+id/btnNewInforSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="90dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:backgroundTint="#C9E990"
        android:text="Xác Nhận" />
</LinearLayout>