<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corner_layout"
    android:backgroundTint="#7FD79B"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/login" />

    <TextView
        android:paddingHorizontal="10dp"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_textview"
        android:paddingVertical="10dp"
        android:text="Đăng nhập"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText

        android:id="@+id/edtPhoneNum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="30dp"
        android:background="@drawable/login_edt"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:ems="10"
        android:hint=" Số điện thoại"
        android:inputType="textPersonName"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/login_edt"
        android:drawableLeft="@drawable/baseline_password_24"
        android:ems="10"
        android:hint=" Mật khẩu"
        android:textColorHint="#125C4C"
        android:inputType="textPassword"
        android:textColor="#125C4C" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="#125C4C"
        android:text="Đăng nhập" />

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/btnRegisterDirect"
        style="@style/ButtonNoBorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#DFA709"
        android:text="Tạo tài khoản"
        android:textColor="#201D28"
        android:textSize="20dp"
        android:textStyle="bold" />
</LinearLayout>