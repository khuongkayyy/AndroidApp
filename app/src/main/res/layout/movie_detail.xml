<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00dd00"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDetail_Home"
            style="@style/ButtonNoBorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:backgroundTint="#00dd00"
            android:drawableLeft="@drawable/home"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/cardview_default_radius"
            android:layout_weight="1"
            android:paddingRight="30dp"
            android:text="THÔNG TIN PHIM"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5f5f5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_layout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtName_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Iron Man 3"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/movieImg_one"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/iron3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtDate_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Ngày khởi chiếu:........." />

                        <TextView
                            android:id="@+id/txtType_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Thể loại: ......" />

                        <TextView
                            android:id="@+id/txtTime_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Thời lượng: ....." />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:backgroundTint="#00dd00"
                    android:text="Mua vé ngay" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="5dp"
                android:padding="10dp"
                android:background="@drawable/round_corner_layout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="Tóm Tắt"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtFilmBrief"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textAlignment="center"
                    android:text="Nội dung tóm tắt được in ở đây" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_corner_layout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đạo diễn"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDirector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:text="Dạo diễn và diễn viên sẽ được thể hiện ở đây" />

                <TextView
                    android:id="@+id/showDirector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Xem thông tin chi tiết"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:textStyle="bold"
                    android:textColor="#009C00"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_corner_layout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginVertical="10dp"
                    android:text="Trailer và hình ảnh" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_marginBottom="10dp"
                            android:id="@+id/picNum1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginHorizontal="10dp"
                            app:srcCompat="@drawable/iron3" />

                        <ImageView
                            android:id="@+id/picNum2"
                            android:layout_marginBottom="10dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_weight="0"
                            android:layout_marginHorizontal="10dp"
                            app:srcCompat="@drawable/iron3" />

                        <ImageView
                            android:id="@+id/picNum3"
                            android:layout_marginBottom="10dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="10dp"
                            app:srcCompat="@drawable/iron3" />

                        <ImageView
                            android:id="@+id/picNum4"
                            android:layout_marginBottom="10dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="10dp"
                            app:srcCompat="@drawable/iron3" />

                        <ImageView
                            android:id="@+id/picNum5"
                            android:layout_marginBottom="10dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="10dp"
                            app:srcCompat="@drawable/iron3" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/round_corner_layout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="Đánh giá của chuyên gia"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="Phần đánh giá của chuyên gia sẽ được in ở đây"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_corner_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:id="@+id/textView32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhận xét của người xem" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/commentList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>